<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList> 

  <path>compass.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>background</object-name>
    <object-name>rebord</object-name>
    <object-name>compass</object-name>
    <object-name>barre</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/DH-91/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>compass</object-name>
    <object-name>barre</object-name>
    <emission>
      <!-- <factor-prop>/controls/lighting/panel-norm</factor-prop> -->
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>compass</object-name>
    <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
    <center>
      <x-m> 0.00784 </x-m>
      <y-m> 0.00000 </y-m>
      <z-m> 0.00027 </z-m>
    </center>
    <axis> 
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>
